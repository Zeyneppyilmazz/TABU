<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/constraintarkaplan"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:text="Parolamı unuttum"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/girisbutton"
        app:layout_constraintStart_toStartOf="@+id/girisTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/girisTextPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginBottom="44dp"
        android:drawableLeft="@drawable/baseline_person_add_24"
        android:text="Yeni üyelik"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/giristextView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisbutton" />

    <TextView
        android:id="@+id/giristextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Üye olarak veya giriş yaparak kullanım ve gizlilik koşullarını kabul etmiş olursunuz. "
        android:textColor="@color/buton"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/giristext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="11dp"
        android:text="TABUU"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/girisimageView"
        app:layout_constraintStart_toStartOf="@+id/girisimageView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/girisTextEmailAddress"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/eddittextarkaplan"
        android:ems="10"
        android:hint="E-mail adresinizi giriniz"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/girisTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisimageView" />

    <EditText
        android:id="@+id/girisTextPassword"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/eddittextarkaplan"
        android:ems="10"
        android:hint="Parolanızı giriniz"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisTextEmailAddress" />

    <ImageView
        android:id="@+id/girisimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toTopOf="@+id/girisTextEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/girisTextEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/giristext"
        app:srcCompat="@drawable/pandaa" />

    <Button
        android:id="@+id/girisbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/buttonarkaolan"
        android:text="Giriş Yap"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>